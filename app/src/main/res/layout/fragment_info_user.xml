<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.infousers.InfoUserActivity">

    <ProgressBar
        android:id="@+id/progress_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageView_user_info_avatar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_user_info_defaultLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Логин : "
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView_user_info_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:text="Логин" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_user_info_defaultName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя : "
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView_user_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:text="Имя" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_user_info_defaultLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Место Нахождения : "
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView_user_info_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:text="Место Нахождения" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_user_info_public_defaultRepos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Публичные репозитоии : "
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView_user_info_public_repos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:text="Публичные репозитоии" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_user_info_defaultFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наблюдатели : "
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView_user_info_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:text="Наблюдатели" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_user_info_defaultFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наблюдаемые : "
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView_user_info_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:text="Наблюдаемые" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>